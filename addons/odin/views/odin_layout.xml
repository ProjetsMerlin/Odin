<odoo>
    <template id="odin_home" name="Odin Home" t-name="odin.odin_home">
        <xpath expr="//head" position="inside">
            <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
            <link rel="stylesheet" href="/odin/static/src/css/style.css"/>
        </xpath>

        <div id="wrapwrap" class="odin">
            <t t-call="odin.odin_nav"/>

            <main id="wrap">
                <t t-call="odin.odin_about" />
                <t t-call="odin.odin_services" />
                <t t-call="odin.odin_textCenter" />
                <t t-call="odin.odin_team" />
                <t t-call="odin.odin_contact" />
            </main>

            <t t-call="odin.odin_footer"/>

        </div>
    </template>
</odoo>