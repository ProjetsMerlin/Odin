<odoo>
    <template id="odin_contact" name="Contact Odin" t-name="odin.odin_contact">
        <section id="contact" class="mt-24">
            <main class="flex overflow-hidden">
                <div class="flex-1 hidden lg:block">
                    <img src="https://images.unsplash.com/photo-1697135807547-5fa9fd22d9ec" class="w-full h-screen object-cover" />
                </div>
                <div class="py-12 flex-1 lg:flex lg:justify-center lg:h-screen lg:overflow-auto">
                    <div class="max-w-lg flex-1 mx-auto px-4 text-gray-600">
                        <div>
                            <h3 class="color_primary text-3xl font-bold sm:text-4xl">
                                Contactez-nous
                            </h3>
                            <p class="mt-3">
                                lorem ipsum dolor sit amet, consectetur adipiscing elit.
                            </p>
                        </div>
                        <form action="/contact/submit" method="post" class="space-y-5 mt-12 lg:pb-12">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                            <div>
                                <label class="font-medium"> Nom </label>
                                <input name="fname" type="text" required="required" class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-gray-800 shadow-sm rounded-lg" />
                            </div>
                            <div>
                                <label class="font-medium"> Pr√©nom </label>
                                <input name="name" type="text" required="required" class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-gray-800 shadow-sm rounded-lg" />
                            </div>
                            <div>
                                <label class="font-medium"> Email </label>
                                <input name="email" type="email" required="required" class="w-full mt-2 px-3 py-2 text-gray-500 bg-transparent outline-none border focus:border-gray-800 shadow-sm rounded-lg" />
                            </div>
                            <div>
                                <label class="font-medium"> Message </label>
                                <textarea name="message" required="required" class="w-full mt-2 h-36 px-3 py-2 resize-none appearance-none bg-transparent outline-none border focus:border-gray-800 shadow-sm rounded-lg"></textarea>
                            </div>
                            <button type="submit" class="max-w-[180px] w-full p-2 text-white font-medium bg-gray-800 hover:bg-gray-700 active:bg-gray-900 rounded-lg duration-150 cursor-pointer">
                                Envoyer
                            </button>
                        </form>
                    </div>
                </div>
            </main>
        </section>
    </template>
</odoo>