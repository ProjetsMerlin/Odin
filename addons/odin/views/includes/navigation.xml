<odoo>
  <template id="odin_nav" name="Odin Navigation" t-name="odin.odin_nav">
    <header class="bg_dark">
      <nav>
        <div class="gap-x-14 justify-between items-center max-w-screen-xl mx-auto px-4 md:flex md:px-8 py-4">
          <div class="flex items-center justify-between py-5 md:block">
            <a href="/">
              <t t-call="odin.odin_logo" />
            </a>
            <div class="md:hidden">
              <button class="menu-btn text-gray-400 hover:text-gray-300">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="hidden w-6 h-6">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
              </button>
            </div>
          </div>
          <div>
            <ul class="flex-1 justify-end items-center space-y-6 md:flex md:space-x-6 md:space-y-0">
              <t t-foreach="request.website.menu_id.child_id" t-as="menu_item">
                <li>
                  <a t-attf-href="{{ menu_item.url }}" t-esc="menu_item.name" class="text-gray-300 hover:text-gray-400 hover:underline" />
                </li>
              </t>
              <li>
                <a target="_blank" href="https://lintermediaire.be" class="flex items-center justify-center gap-x-1 py-2 px-4 text-white font-medium bg_primary hover:opacity-90 duration-150 rounded-full md:inline-flex">
                  Get started
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5">
                    <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
                  </svg>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  </template>
</odoo>
