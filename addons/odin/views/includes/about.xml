<odoo>
  <template id="odin_about" name="About Odin" t-name="odin_About">
    <t t-set="paragraph" t-value="request.env['website.paragraph.text'].sudo().search([], limit=1)"/>
    <section class="relative max-w-screen-xl mx-auto mt-16 py-4 px-4 md:px-8">
      <div class="relative z-10 gap-5 items-center lg:flex">
        <div class="py-5 sm:mx-auto sm:text-center lg:w-1/2 lg:text-left">
          <t t-if="paragraph">
            <h4 class="uppercase text-gray-400 font-semibold" t-esc="website.company_id.name" />
          </t>
          <h3 class="uppercase text-3xl color_primary font-semibold md:text-4xl" t-esc="paragraph.name" />
          <t t-if="paragraph">
            <div class="text-gray-500 leading-relaxed mt-3">
              <t t-raw="paragraph.content"/>
            </div>
          </t>
          <a class="mt-5 px-4 py-2 color_primary font-medium bg-indigo-50 rounded-full inline-flex items-center" href="#services">
            Continuer
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-1 duration-150" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
        </div>
        <div class="mt-5 mx-auto sm:w-9/12 lg:mt-0 lg:w-1/2">
          <t t-set="website" t-value="request.website"/>
          <t t-set="img_url" t-value="website.social_default_image or '/odin/static/src/img/container.png'"/>
          <!-- !!! -->
          <img t-att-src="'/odin/static/src/img/container.png'" alt="Image SEO personnalisÃ©e"/>
        </div>
      </div>
    </section>
  </template>
</odoo>