<odoo>
    <template id="contact_thank_you" name="Contact - Merci">
        <xpath expr="//head" position="inside">
            <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
            <link rel="stylesheet" href="/odin/static/src/css/style.css"/>
        </xpath>
        <div id="wrapwrap" class="odin">
            <header class="bg_dark">
                <t t-call="odin.odin_nav"/>
            </header>

            <main id="wrap">
                <div class="max-w-xl mx-auto h-96 flex flex-col justify-center items-center text-center space-y-4">
                    <h1 class="text-4xl font-bold mb-4">
                        Merci !
                    </h1>
                    <p class="text-lg text-gray-600 mb-4">
                        Votre message a bien été reçu. Nous vous répondrons dans les plus brefs délais.
                    </p>
                    <a class="max-w-[210px] w-full px-4 py-2 text-white font-medium bg-gray-800 hover:bg-gray-700 active:bg-gray-900 rounded-lg duration-150" href="/">
                        Retour au site
                    </a>
                </div>
            </main>

            <footer class="odin-footer bg-light text-center">
                <p class="py-10 border-t border-(--color_grey) md:text-center text-(--color_text)">
                    <t t-esc="datetime.datetime.now().year"/>
                    <span class="separate"> - </span>
                    <span t-esc="website.company_id.name"/>
                </p>
            </footer>
        </div>
    </template>
</odoo>